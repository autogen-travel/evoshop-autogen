<tr class="cartRow" data-hash="[+hash+]" data-step="[+step+]">
	<td><img src="[+thumb+]" width="55"></td>
	<td><a href="[+url+]">[+name+]</a><table>[+params+]</table></td>
	<td>[+price_formatted_sign+]</td> 
	<td><button class="btn es-cntMinus">-</button><input type="number" step="[+step+]" min="[+step+]" name="es-cnt" value="[+quantity+]"/><strong>[+units+]</strong><button class="btn es-cntPlus">+</button></td>
	<td>[+summ_formatted_sign+]</td>
	<td><button class="es-delete btn btn-danger">[(__delete)]</button></td>
</tr>